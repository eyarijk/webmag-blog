<div class="aside-widget">
    <div class="section-title">
        <h2>{{ 'widgets.categories'|trans }}</h2>
    </div>
    <div class="category-widget">
        <ul>
            {% for categoryWithCount in enabledCategoriesWithCountArticles %}
                <li>
                    <a href="{{ path('category_page',{'slug':categoryWithCount.category.slug}) }}">{{ categoryWithCount.category.title }}
                        <span style="background-color: {{ categoryWithCount.category.color }}">{{ categoryWithCount.articleCount }}</span>
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>

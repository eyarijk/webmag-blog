<div class="col-md-4">
    <div class="post">
        <a class="post-img" href="{{ path('article_page',{'slug':article.slug}) }}">
            <img src="{{ article.getMainImagePath }}" alt="{{ article.title }}">
        </a>
        <div class="post-body">
            <div class="post-meta">
                <a class="post-category cat-1" href="{{ article.category.slug }}">{{ article.category.title }}</a>
                <span class="post-date">{{ article.publishedAt|date('F d, Y') }}</span>
            </div>
            <h3 class="post-title">
                <a href="{{ path('article_page',{'slug':article.slug}) }}">{{ article.title }}</a>
            </h3>
        </div>
    </div>
</div>

<div class="col-md-12">
    <div class="post post-row">
        <a class="post-img" href="{{ path('article_page',{'slug':article.slug}) }}">
            {% if article.mainImage %}
                <img src="{{ article.mainImage.name|uploadImagePath }}" alt="{{ article.title }}">
            {% endif %}
        </a>
        <div class="post-body">
            <div class="post-meta">
                <a class="post-category" style="background-color: {{ article.category.color }}" href="{{ path('category_page',{'slug': article.category.slug}) }}">{{ article.category.title }}</a>
                <span class="post-date">{{ article.publishedAt|date('F d, Y') }}</span>
            </div>
            <h3 class="post-title">
                <a href="{{ path('article_page',{'slug':article.slug}) }}">{{ article.title }}</a>
            </h3>
           {{ article.shortDescription }}
        </div>
    </div>
</div>

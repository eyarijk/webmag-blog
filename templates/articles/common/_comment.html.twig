<div class="media">
    <div class="media-left">
        {#<img class="media-object" src="{{ parentComment.user }}" alt="">#}
    </div>
    <div class="media-body">
        <div class="media-heading">
            <h4 class="comment-user">{{ parentComment.user.email }}</h4>
            <span class="time">{{ parentComment.createdAt|date('F d, Y') }}</span>
            <span data-id="{{ parentComment.id }}" class="comment-reply reply cursor-pointer">Reply</span>
        </div>
        <p class="comment-text">{{ parentComment.description }}</p>

        {% if comments[parentComment.id] is defined %}
            {% for comment in comments[parentComment.id] %}
                {% include 'articles/common/_comment.html.twig' with {'comments':comments,'parentComment':comment} %}
            {% endfor %}
        {% endif %}

    </div>
</div>

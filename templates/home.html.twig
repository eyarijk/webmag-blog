{% extends 'layouts/public.html.twig' %}

{% block content %}
    {% if recentArticles|length > 0 %}
        <div class="section">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="section-title">
                            <h2>Recent Posts</h2>
                        </div>
                    </div>

                    {% for articleBatch in recentArticles|batch(3, 'No item') %}
                        {% for article in articleBatch %}
                            {% include 'includes/common/_article_item_by3.html.twig' with {'article':article} only %}
                        {% endfor %}
                        <div class="clearfix visible-md visible-lg"></div>
                    {% endfor %}

                </div>
            </div>
        </div>
    {% endif %}

    {% if featuredArticles|length > 0 %}
        <div class="section section-grey">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="section-title text-center">
                            <h2>Featured Posts</h2>
                        </div>
                    </div>

                    {% for article in featuredArticles %}
                        {% include 'includes/common/_article_item_by3.html.twig' with {'article':article} only %}
                    {% endfor %}

                </div>
            </div>
        </div>
    {% endif %}

        <div class="section">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="section-title">
                                    <h2>Most Read</h2>
                                </div>
                            </div>

                            {% for article in mostReadArticles %}
                                {% include 'includes/common/_article_item_by1.html.twig' with {'article':article} only %}
                            {% endfor %}

                            {% if countEnabledArticles > 4 %}
                                <div class="col-md-12">
                                    <div class="section-row">
                                        <button class="primary-button center-block">Load More ({{ countEnabledArticles }})</button>
                                    </div>
                                </div>
                            {% endif %}

                        </div>
                    </div>

                    <div class="col-md-4">

                        <div class="aside-widget">
                            <div class="section-title">
                                <h2>Catagories</h2>
                            </div>
                            <div class="category-widget">
                                <ul>
                                    <li><a href="#" class="cat-1">Web Design<span>340</span></a></li>
                                    <li><a href="#" class="cat-2">JavaScript<span>74</span></a></li>
                                    <li><a href="#" class="cat-4">JQuery<span>41</span></a></li>
                                    <li><a href="#" class="cat-3">CSS<span>35</span></a></li>
                                </ul>
                            </div>
                        </div>
                        <!-- /catagories -->

                        <!-- tags -->
                        <div class="aside-widget">
                            <div class="tags-widget">
                                <ul>
                                    <li><a href="#">Chrome</a></li>
                                    <li><a href="#">CSS</a></li>
                                    <li><a href="#">Tutorial</a></li>
                                    <li><a href="#">Backend</a></li>
                                    <li><a href="#">JQuery</a></li>
                                    <li><a href="#">Design</a></li>
                                    <li><a href="#">Development</a></li>
                                    <li><a href="#">JavaScript</a></li>
                                    <li><a href="#">Website</a></li>
                                </ul>
                            </div>
                        </div>
                        <!-- /tags -->
                    </div>
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
{% endblock %}

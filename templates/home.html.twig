{% extends 'layouts/public.html.twig' %}

{% block content %}
    {% if recentArticles|length > 0 %}
        <div class="section">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="section-title">
                            <h2>Recent Posts</h2>
                        </div>
                    </div>

                    {% for articleBatch in recentArticles|batch(3, 'No item') %}
                        {% for article in articleBatch %}
                            {% include 'includes/common/_article_item_by3.html.twig' with {'article':article} only %}
                        {% endfor %}
                        <div class="clearfix visible-md visible-lg"></div>
                    {% endfor %}

                </div>
            </div>
        </div>
    {% endif %}

    {% if featuredArticles|length > 0 %}
        <div class="section section-grey">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="section-title text-center">
                            <h2>Featured Posts</h2>
                        </div>
                    </div>

                    {% for article in featuredArticles %}
                        {% include 'includes/common/_article_item_by3.html.twig' with {'article':article} only %}
                    {% endfor %}

                </div>
            </div>
        </div>
    {% endif %}

        <div class="section">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="section-title">
                                    <h2>Most Read</h2>
                                </div>
                            </div>

                            {% for article in mostReadArticles %}
                                {% include 'includes/common/_article_item_by1.html.twig' with {'article':article} only %}
                            {% endfor %}

                            {% if countEnabledArticles > 4 %}
                                <div class="col-md-12">
                                    <div class="section-row">
                                        <button class="primary-button center-block">Load More ({{ countEnabledArticles }})</button>
                                    </div>
                                </div>
                            {% endif %}

                        </div>
                    </div>

                    <div class="col-md-4">

                        {% include 'includes/aside_widget_categories.html.twig' %}

                        {% include 'includes/aside_widget_tags.html.twig' %}

                    </div>
                </div>

            </div>

        </div>
{% endblock %}

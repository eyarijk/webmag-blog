{% extends 'layouts/security.html.twig' %}

{% block content %}

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <h3 class="h3 mb-3 font-weight-normal">{{ 'login.sign_in_title'|trans }}</h3>
    <form method="post">
        <div class="form-group">
            <label>{{ 'login.email_address'|trans }}</label>
            <input name="email" type="email" value="{{ last_username }}" class="form-control" placeholder="Email" required autofocus>
        </div>
        <div class="form-group">
            <label>{{ 'login.password'|trans }}</label>
            <input name="password" type="password" class="form-control" placeholder="Password" required>
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox" name="_remember_me"> {{ 'login.remember_me'|trans }}
            </label>
        </div>
        <button type="submit" class="btn btn-success btn-flat m-b-30 m-t-30">{{ 'login.sign_in'|trans }}</button>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    </form>
{% endblock %}

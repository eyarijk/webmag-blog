{% extends 'layouts/public.html.twig' %}

{% block header %}
    <div class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-md-10">
                    <ul class="page-header-breadcrumb">
                        <li><a href="{{ path('home') }}">Home</a></li>
                        <li>News</li>
                    </ul>
                    <h1>New</h1>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="row">

                        {% for index,article in mainArticles %}
                            <div class="col-md-{{ index == 0 ? '12' : '6' }}">
                                {% include 'articles/common/_article_item_grid.html.twig' with {'article':article} only %}
                            </div>
                        {% endfor %}

                        <div class="clearfix visible-md visible-lg"></div>

                        {% include 'articles/common/_more_read.html.twig' with {'articles':articles,'countArtilces':articles.getTotalItemCount,'action':  path('new_more_read')} only %}

                    </div>
                </div>

                <div class="col-md-4">

                    {{ render(controller('App\\Controller\\LayoutController::widgetCategories')) }}

                    {{ render(controller('App\\Controller\\LayoutController::widgetTags')) }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}
